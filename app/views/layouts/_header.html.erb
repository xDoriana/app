<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <span class="glyphicon glyphicon-time"></span>
    <% end %>

    <nav>
      <!-- markup for a hamburger menu -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
      </div>

      <!-- the layout links for logged-in users -->
      <div class="collapse navbar-collapse"
          id="bs-example-navbar-collapse-1">
        <% if logged_in? %>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Employers", employers_path %></li>
            <li><%= link_to "Employees", employees_path %></li>
            <li><%= link_to "Budgets", budgets_path %></li>
            <li><%= link_to "Timesheets", timesheets_path %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Log in", login_path %></li>
          </ul>
        <% end %>
      </div>
    </nav>
  </div>
</header>