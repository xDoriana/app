<% provide(:title, "Add Budget") %>

<div class="jumbotron">
    <h1>Add a new Budget</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <%= form_for @budget do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :employer_id %>
            <%= f.select :employer_id, Employer.all.collect { |e| ["ID #{e.id}, #{e.first_name} #{e.last_name}", e.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>

            <%= f.label :hours %>
            <%= f.number_field :hours, class: 'form-control'%>

            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: 'form-control'%>

            <%= f.label :end_date %>
            <%= f.date_field :end_date, class: 'form-control'%>

            <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
            <%= link_to "Cancel", budgets_path, class: "btn btn-info btn-block" %>
            
        <% end %>

    </div>
</div>