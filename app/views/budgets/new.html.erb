<h1>Add a new Budget</h1>

<%= form_for @budget do |f| %>

    <%= f.label :employer_id %><br/ >
    <%= f.select :employer_id, Employer.all.collect { |x| [x.first_name, x.last_name, x.id]}, {:include_blank => 'Select One'} %><br /><br />

    <%= f.label :hours %><br />
    <%= f.number_field :hours%><br />

    <%= f.label :start_date %><br />
    <%= f.date_field :start_date%><br />

    <%= f.label :end_date %><br />
    <%= f.date_field :end_date%><br />

    <%= f.submit "Submit" %>
    
<% end %>