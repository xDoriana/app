<% provide(:title, "Edit Budget") %>

<h1>Edit Budget</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <strong>ID: </strong><%= @budget.id %>
        <br></br>

        <strong>Employer: </strong>ID <%= @employer.id %>, <%= @employer.first_name %> <%= @employer.last_name %>
        <br></br>

        <%= form_for @budget do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :hours %>
            <%= f.number_field :hours, required: true, class: 'form-control' %>

            <%= f.label :start_date %>
            <%= f.date_field :start_date, required: true, class: 'form-control' %>

            <%= f.label :end_date %>
            <%= f.date_field :end_date, required: true, class: 'form-control' %>

            <%= f.submit "Save changes", class: "btn btn-primary btn-lg btn-block" %>
            <%= link_to "Cancel", budget_path, class: "btn btn-info btn-block" %>

        <% end %>

    </div>
</div>