<h1>Edit Budget</h1>

<h3>ID:</h3>
<p><%= @budget.id %></p>

<h3>Employer:</h3>
<p>ID <%= @employer.id %>, <%= @employer.first_name %> <%= @employer.last_name %></p>

<%= form_for @budget do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :hours %><br />
    <%= f.number_field :hours %><br />

    <%= f.label :start_date %><br />
    <%= f.date_field :start_date %><br />

    <%= f.label :end_date %><br />
    <%= f.date_field :end_date %><br />

    <%= f.submit "Submit" %>
    <%= link_to "Cancel", budgets_path %>

<% end %>
