<h1>Budgets</h1>

<% @budgets.each do |budget| %>
    <p>ID: <%= budget.id %>, Employer: <%= budget.employer_id %>, Hours: <%= budget.hours %>, Start date: <%= budget.start_date %>, End date: <%= budget.end_date %><br />
    <%= link_to "View", budget_path(budget.id) %> | <%= link_to "Edit", edit_budget_path(budget.id) %> | <%= link_to "Delete", budget, method: :delete, data: { confirm: "This action will delete the budget and any associated timesheets" }%></p>
    <p></p>
<% end %>

<br/>
<h4> Create new Budget:</h4>
<%= link_to "Create new", new_budget_path, class: "btn btn-primary" %>