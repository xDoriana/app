<h1>Employer</h1>

<h3>ID</h3>
<p><%= @employer.id %></p>

<h3>Name</h3>
<p><%= @employer.first_name %> <%= @employer.last_name %></p>

<h3>Associated employees:</h3>
<% if @employer.has_assoc_employees? %>
    <% @employees.each do |e| %>
        <p>ID <%= e.id %>, <%= e.first_name %> <%= e.last_name %></p>
    <% end %>
<% else %>
    <p>Employer does not have associated employees</p>
<% end %>

<h3>Associated budgets:</h3>
<% if @employer.has_assoc_budgets? %>
    <% @budgets.each do |b| %>
        <p>ID <%= b.id %></p>
    <% end %>
<% else %>
    <p>Employer does not have associated budgets</p>
<% end %>


