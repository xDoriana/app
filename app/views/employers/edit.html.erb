<h1>Edit Employer</h1>

<h3>ID</h3>
<p><%= @employer.id %></p>

<%= form_for @employer do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :first_name %><br/ >
    <%= f.text_field :first_name %><br />

    <%= f.label :last_name %><br/ >
    <%= f.text_field :last_name %><br />

    <%= f.submit "Submit" %>
    <%= link_to "Cancel", employers_path %>
    
<% end %>