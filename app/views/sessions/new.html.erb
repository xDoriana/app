<% provide(:title, "Log in") %>
<!-- schimba chestia asta peste tot!!! -->

<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :email %><br />
        <%= f.email_field :email %><br />

        <%= f.label :password %><br />
        <%= f.password_field :password %><br />

        <%= f.submit "Log in" %><br />
    <% end %>

    <p>New user? <%= link_to "Sign up now!", '/users/new' %></p>
  </div>
</div>
